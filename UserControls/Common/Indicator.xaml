<UserControl x:Class="TodoErr.UserControls.Common.Indicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             mc:Ignorable="d" 
             x:Name="Indicatr"
             >
    
    <StackPanel Orientation="Horizontal" Height="auto">
        <fa:ImageAwesome Icon="{Binding ElementName=Indicatr, Path=Icon}" Foreground="{StaticResource Blue}" Height="15"/>
        <TextBlock Text="{Binding ElementName=Indicatr, Path=Header}" VerticalAlignment="Center" Foreground="WhiteSmoke" FontSize="14" FontWeight="Medium" Margin="10 0"/>
    </StackPanel>

</UserControl>
